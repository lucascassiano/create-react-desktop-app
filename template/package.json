{
  "name": "react-electron-parcel",
  "version": "1.0.0",
  "description": "",
  "main": "./build/index.js",
  "scripts": {
    "prestart": "npm run parcel:build",
    "parcel:build": "rimraf ./src/app &&  parcel build ./src/index.html --target=electron --out-dir ./engine/app --public-url ./ ",
    "parcel:start": "parcel ./src/index.html --target=electron --out-dir ./engine/app --public-url ./ ",
    "electron:start": "NODE_ENV=development electron -r babel-register ./engine/",
    "electron:build": "NODE_ENV=production babel ./engine/ --out-dir build",
    "dev": "RELOAD=true npm start",
    "start": "run-p -l parcel:start electron:start",
    "build": "run-s parcel:build electron:build",
    "postinstall": "electron-rebuild",
    "package": "npm run build && electron-packager . --overwrite --out=release-builds",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=release-builds",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=release-builds ",
    "package:linux": "electron-packager . electron-tutorial-app --overwrite  --platform=linux --arch=x64 --icon=assets/icons/png/1024x1024.png --prune=true --out=release-builds"
  },
  "author": "lucascassiano",
  "license": "MIT",
  "dependencies": {
    "babel-runtime": "^6.26.0",
    "electron-is-dev": "^0.3.0",
    "react": "^16.4.2",
    "react-dom": "^16.4.2",
    "react-hot-loader": "^4.3.5",
    "serialport": "^7.0.2",
    "titlebar": "^1.4.0"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.0",
    "babel-plugin-inline-react-svg": "^0.5.4",
    "babel-preset-env": "^1.7.0",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-app": "^3.1.2",
    "babel-preset-stage-0": "^6.24.1",
    "electron": "^3.0.0-nightly.20180821",
    "electron-packager": "^12.1.1",
    "electron-rebuild": "^1.8.2",
    "electron-reload": "^1.2.5",
    "npm-run-all": "^4.1.3",
    "parcel-bundler": "^1.9.7",
    "rimraf": "^2.6.2",
    "rmdir": "^1.2.0"
  }
}
